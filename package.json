{
  "name": "farm-alamal",
  "version": "1.0.0",
  "description": "Farm Management Desktop App",
  "main": "main.js",
  "author": "Ahmed Elnagar",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "@google/genai": "^1.35.0",
    "better-sqlite3": "^12.6.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.12.0",
    "recharts": "^3.6.0",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "vite": "^5.4.0",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.farm.alamal",
    "productName": "Farm Al Amal",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}
