{
  "name": "farm-alamal",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "recharts": "^3.6.0",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.4",
    "html2canvas": "^1.4.1",
    "better-sqlite3": "^12.6.0",
    "@google/genai": "^0.3.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.4.0",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "typescript": "^5.4.0"
  },
  "build": {
    "appId": "com.farm.alamal",
    "productName": "Farm Al Amal",
    "files": [
      "dist/**/*",
      "main.js"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false
    }
  }
}
